@model IEnumerable<Order>
<h2 class="text-center mt-3 mb-4">List of orders</h2>

<div class="container text-center">
    <table class="table">
        <thead>
            <tr>
                <th>Name of product</th>
                <th>Quantity products</th>
                <th>Price</th>
                <th>Order date</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Name</td>
                    <td>@order.Quantity</td>
                    <td>@order.Price</td>
                    <td>@order.OrderDate?.ToShortDateString()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-warning">Change</a>
                        <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Create" class="btn btn-primary">Add new order</a>
</div>