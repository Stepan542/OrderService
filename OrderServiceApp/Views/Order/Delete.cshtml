@model Order

<div class="container text-center">
    <h2 class="mt-3 mb-3">Delete current order:</h2>
    <div>
        <h5 class="mb-3">Product name: @Model.Name</h5>
        <h5 class="mb-3">Quantity: @Model.Quantity</h5>
        <h5 class="mb-3">Price: @Model.Price</h5>
        <h5 class="mb-3">Date: @Model.OrderDate?.ToShortDateString()</h5>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <p class="mb-3">Are you sure for delete order?</p>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>